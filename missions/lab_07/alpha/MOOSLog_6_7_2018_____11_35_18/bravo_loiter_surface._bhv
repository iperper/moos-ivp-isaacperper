//--------    FILE: bravo_loiter_surface.bhv   -------------

initialize   DEPLOY = false
initialize   RETURN = false

//----------------------------------------------
Behavior = BHV_Timer
 {
   name         = bhv_timer_1
   condition    = TIMER_1=true    // example
   duration     = 200                  // example
   endflag      = DIVE=false
   endflag      = TIMER_2 = true
   endflag      = TIMER_1 = false
   perpetual    = true
   updates      = TIMER_UPDATES        // example

 }

//----------------------------------------------
Behavior = BHV_Timer
 {
   name         = bhv_timer_2
   condition    = TIMER_2=true    // example
   duration     = 60                  // example
   endflag      = DIVE=true
   endflag      = TIMER_2 = false
   endflag      = TIMER_1 = true 
   perpetual    = true
   updates      = TIMER_UPDATES        // example

 }


//----------------------------------------------
Behavior = BHV_ConstantDepth
 {
   name         = const_dep_survey_1   // example
   pwt          = 100                // default
   condition    = LOITER_NUM = 1 
   condition    = DIVE = true 
   perpetual = true
   updates      = CONST_DEP_UPDATES 

   // Parameters specific to this behavior
   // ------------------------------------
            basewidth = 100          // default
                depth = 30            // default
   depth_mismatch_var = DEPTH_DIFF   // example
             duration = no-time-limit
            peakwidth = 3            // default
          summitdelta = 50           // default
 }

//----------------------------------------------
Behavior = BHV_ConstantDepth
 {
   name         = const_dep_survey_2   // example
   pwt          = 100                // default
   condition    = LOITER_NUM = 2      
   
   condition    = DIVE = true 
   perpetual = true
   updates      = CONST_DEP_UPDATES 

   // Parameters specific to this behavior
   // ------------------------------------
            basewidth = 100          // default
                depth = 10            // default
   depth_mismatch_var = DEPTH_DIFF   // example
             duration = no-time-limit
            peakwidth = 3            // default
          summitdelta = 50           // default
 }
	
//----------------------------------------------
Behavior = BHV_Loiter
{ 
  name      = loiter_bravo_1
  pwt       = 100
  condition = RETURN = false
  condition = DEPLOY = true
  condition = LOITER_NUM = 1

  condition    = DIVE = true 
  endflag   = LOITER_NUM = 2

  updates    = LOITER_UPDATES
  perpetual  = true
  duration   = 150
  duration_idle_decay = false
  
        acquire_dist = 10               // default
      capture_radius = 3                // default  
     center_activate = false            // default
           clockwise = false          
         slip_radius = 15               // default
               speed = 2.5                
       spiral_factor = -2              // default

             polygon = radial:: x=100,y=-75, radius=30,pts=8  // example



    visual_hints = nextpt_color=yellow
    visual_hints = nextpt_vertex_size=8
    visual_hints = nextpt_lcolor=gray70
    visual_hints = vertex_color=dodger_blue, edge_color=white
    visual_hints = vertex_size=5, edge_size=1
}

//----------------------------------------------
Behavior = BHV_Loiter
{ 
  name      = loiter_bravo_2
  pwt       = 100
  condition = RETURN = false
  condition = DEPLOY = true
  condition = LOITER_NUM = 2  
  condition    = DIVE = true 
  endflag   = LOITER_NUM = 1

  updates    = LOITER_UPDATES_2
  perpetual  = true
  duration   = 150
  duration_idle_decay = false
  
        acquire_dist = 10               // default
      capture_radius = 3                // default  
     center_activate = false            // default
           clockwise = false          
         slip_radius = 15               // default
               speed = 2.5                
       spiral_factor = -2              // default

             polygon = radial:: x=160,y=-50, radius=20,pts=8  // example



    visual_hints = nextpt_color=yellow
    visual_hints = nextpt_vertex_size=8
    visual_hints = nextpt_lcolor=gray70
    visual_hints = vertex_color=dodger_blue, edge_color=white
    visual_hints = vertex_size=5, edge_size=1
}


//----------------------------------------------
Behavior=BHV_Waypoint
{
  name       = waypt_return
  pwt        = 100
  condition  = RETURN = true
  condition  = DEPLOY = true
  perpetual  = true
  updates    = RETURN_UPDATE
  endflag    = RETURN = false
  endflag    = DEPLOY = false
  endflag    = MISSION = complete
	
           speed = 2.0
  capture_radius = 2.0
     slip_radius = 8.0
          points = 0,0
 }

//----------------------------------------------
Behavior=BHV_ConstantSpeed
{
  name       = const_speed
  pwt        = 200
  condition  = SPD=true
  condition  = DEPLOY = true
  perpetual  = true
  updates    = SPEED_UPDATE
  endflag    = SPD = false

     speed = 0.5
		 duration = 10
		 duration_reset = CONST_SPD_RESET=true
	
}

